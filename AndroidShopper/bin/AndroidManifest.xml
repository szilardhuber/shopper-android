<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shopper.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="ShopperApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher" >
        <activity
            android:name="com.shopper.android.activity.Shopper"
            android:label=""
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shopper.android.activity.LoginActivity"
            android:label=""
            android:theme="@style/LoginFormContainer" >
        </activity>
        <activity
            android:name="com.shopper.android.activity.ShoppingListActivity"
            android:label=""
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
    </application>

</manifest>