<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_hight"
        android:background="@color/background_start_color"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/list_item_padding"
        android:paddingRight="@dimen/list_item_padding" >

        <Button
            android:layout_width="@dimen/small_circle_radius"
            android:layout_height="@dimen/small_circle_radius"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/list_item_padding"
            android:background="@drawable/white_button"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/quantity"
            android:layout_width="@dimen/big_circle_radius"
            android:layout_height="@dimen/big_circle_radius"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/list_item_padding"
            android:background="@drawable/big_circle_button"
            android:textColor="@color/font_color"
            android:textSize="@dimen/list_item_font_size" />

        <TextView
            android:id="@+id/itemname"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:textColor="@color/font_color" 
            android:textSize="@dimen/list_item_font_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#b1c789" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

</LinearLayout>